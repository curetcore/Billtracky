# ========================================
# BILLTRACKY - Environment Variables
# ========================================
# Copy this file to .env.local and fill with your credentials
# NEVER commit .env.local to version control

# ========================================
# FIREBASE CONFIGURATION (Client-side)
# ========================================
# Get these from Firebase Console > Project Settings > Your apps
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890

# ========================================
# FIREBASE ADMIN SDK (Server-side)
# ========================================
# Get these from Firebase Console > Project Settings > Service Accounts
FIREBASE_ADMIN_PROJECT_ID=your-project-id
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Here\n-----END PRIVATE KEY-----\n"

# ========================================
# GOOGLE GENKIT AI
# ========================================
# Get API key from: https://makersuite.google.com/app/apikey
GOOGLE_GENAI_API_KEY=your_google_generative_ai_api_key
GENKIT_ENV=dev

# ========================================
# APPLICATION CONFIGURATION
# ========================================
NEXT_PUBLIC_APP_NAME="Billtracky"
NEXT_PUBLIC_APP_URL=http://localhost:9002
NEXT_PUBLIC_API_URL=http://localhost:9002/api
NODE_ENV=development

# ========================================
# PAYMENT GATEWAYS (Optional)
# ========================================
# Stripe
STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxx

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# ========================================
# EMAIL SERVICE (Optional)
# ========================================
# SendGrid
SENDGRID_API_KEY=SG.xxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@billtracky.com

# Resend
RESEND_API_KEY=re_xxxxxxxxxxxx

# ========================================
# STORAGE & CDN (Optional)
# ========================================
# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ========================================
# ANALYTICS (Optional)
# ========================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# PostHog
NEXT_PUBLIC_POSTHOG_KEY=phc_xxxxxxxxxxxx
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ========================================
# MONITORING (Optional)
# ========================================
# Sentry
SENTRY_DSN=https://xxxxxxxxxxxx@sentry.io/xxxxxxxxxxxx

# ========================================
# FEATURE FLAGS
# ========================================
NEXT_PUBLIC_ENABLE_AI_ASSISTANT=true
NEXT_PUBLIC_ENABLE_PAYMENTS=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_MAINTENANCE_MODE=false

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ========================================
# SESSION & SECURITY
# ========================================
SESSION_SECRET=your_random_session_secret_min_32_chars
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_32_chars_min

# ========================================
# DATABASE (if using external DB)
# ========================================
# PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/billtracky

# MongoDB
# MONGODB_URI=mongodb://localhost:27017/billtracky

# ========================================
# REDIS (for caching)
# ========================================
# REDIS_URL=redis://localhost:6379
