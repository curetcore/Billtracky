// Billtracky - Prisma Schema
// Database: PostgreSQL 16

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// AUTHENTICATION & USERS
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  password      String?   // For NextAuth credentials
  role          UserRole  @default(EMPLOYEE)
  
  // Relations
  accounts      Account[]
  sessions      Session[]
  
  // Timestamps
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  
  @@map("users")
  @@index([email])
  @@index([role])
}

enum UserRole {
  ADMIN
  MANAGER
  EMPLOYEE
  VIEWER
}

// NextAuth Tables
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// CORE BUSINESS - ORDERS
// ============================================

model Order {
  id              String      @id @default(cuid())
  orderNumber     String      @unique @map("order_number")
  
  // Customer info
  customerId      String?     @map("customer_id")
  customerName    String      @map("customer_name")
  customerEmail   String?     @map("customer_email")
  customerPhone   String?     @map("customer_phone")
  
  // Order details
  orderDate       DateTime    @map("order_date")
  deliveryDate    DateTime?   @map("delivery_date")
  status          OrderStatus @default(PENDING)
  priority        Priority    @default(NORMAL)
  
  // Financial
  subtotal        Decimal     @db.Decimal(12, 2)
  tax             Decimal     @default(0) @db.Decimal(12, 2)
  discount        Decimal     @default(0) @db.Decimal(12, 2)
  total           Decimal     @db.Decimal(12, 2)
  
  // Metadata
  notes           String?     @db.Text
  attachments     Json?       // Array of file URLs
  tags            String[]    @default([])
  
  // Relations
  items           OrderItem[]
  payments        Payment[]
  transactions    Transaction[]
  
  // Timestamps
  createdAt       DateTime    @default(now()) @map("created_at")
  updatedAt       DateTime    @updatedAt @map("updated_at")
  deletedAt       DateTime?   @map("deleted_at")
  
  @@map("orders")
  @@index([orderNumber])
  @@index([customerName])
  @@index([customerEmail])
  @@index([orderDate])
  @@index([status])
  @@index([priority])
  @@index([deletedAt])
  @@index([deletedAt, orderDate])
}

enum OrderStatus {
  PENDING
  PROCESSING
  COMPLETED
  CANCELLED
  ON_HOLD
}

enum Priority {
  LOW
  NORMAL
  HIGH
  URGENT
}

model OrderItem {
  id              String   @id @default(cuid())
  orderId         String   @map("order_id")
  
  // Product info
  sku             String?
  name            String
  description     String?  @db.Text
  quantity        Int
  unitPrice       Decimal  @db.Decimal(10, 2) @map("unit_price")
  subtotal        Decimal  @db.Decimal(12, 2)
  
  // Optional: For cost distribution
  weight          Decimal? @db.Decimal(10, 4)
  volume          Decimal? @db.Decimal(10, 6)
  
  // Relation
  order           Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  // Timestamps
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  
  @@map("order_items")
  @@index([orderId])
  @@index([sku])
}

// ============================================
// PAYMENTS & TRANSACTIONS
// ============================================

model Payment {
  id              String        @id @default(cuid())
  paymentId       String        @unique @map("payment_id")
  orderId         String?       @map("order_id")
  
  // Payment details
  paymentDate     DateTime      @map("payment_date")
  paymentType     PaymentType   @map("payment_type")
  paymentMethod   PaymentMethod @map("payment_method")
  
  // Amount
  currency        Currency      @default(USD)
  amount          Decimal       @db.Decimal(12, 2)
  exchangeRate    Decimal       @default(1) @db.Decimal(8, 4) @map("exchange_rate")
  amountInBase    Decimal?      @db.Decimal(12, 2) @map("amount_in_base") // Converted to base currency
  
  // Metadata
  reference       String?       // Bank reference, transaction ID, etc.
  notes           String?       @db.Text
  attachments     Json?         // Receipts, invoices
  
  // Relation
  order           Order?        @relation(fields: [orderId], references: [id])
  
  // Timestamps
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt @map("updated_at")
  deletedAt       DateTime?     @map("deleted_at")
  
  @@map("payments")
  @@index([orderId])
  @@index([paymentDate])
  @@index([paymentType])
  @@index([paymentMethod])
  @@index([deletedAt])
}

enum PaymentType {
  ADVANCE
  BALANCE
  FULL
  PARTIAL
  REFUND
}

enum PaymentMethod {
  CASH
  BANK_TRANSFER
  CREDIT_CARD
  DEBIT_CARD
  CHECK
  PAYPAL
  CRYPTOCURRENCY
  OTHER
}

enum Currency {
  USD
  RD
  EUR
  CNY
}

model Transaction {
  id              String            @id @default(cuid())
  transactionId   String            @unique @map("transaction_id")
  orderId         String?           @map("order_id")
  
  // Transaction details
  type            TransactionType
  category        String            // e.g., "Sales", "Expense", "Refund"
  amount          Decimal           @db.Decimal(12, 2)
  currency        Currency          @default(USD)
  description     String            @db.Text
  transactionDate DateTime          @map("transaction_date")
  
  // Metadata
  reference       String?
  attachments     Json?
  tags            String[]          @default([])
  
  // Relation
  order           Order?            @relation(fields: [orderId], references: [id])
  
  // Timestamps
  createdAt       DateTime          @default(now()) @map("created_at")
  updatedAt       DateTime          @updatedAt @map("updated_at")
  deletedAt       DateTime?         @map("deleted_at")
  
  @@map("transactions")
  @@index([orderId])
  @@index([type])
  @@index([category])
  @@index([transactionDate])
  @@index([deletedAt])
}

enum TransactionType {
  INCOME
  EXPENSE
}

// ============================================
// EMPLOYEES
// ============================================

model Employee {
  id              String       @id @default(cuid())
  employeeId      String       @unique @map("employee_id")
  
  // Personal info
  firstName       String       @map("first_name")
  lastName        String       @map("last_name")
  fullName        String       @map("full_name") // Computed field
  email           String       @unique
  phone           String?
  
  // Job details
  role            EmployeeRole
  department      String?
  position        String?
  hireDate        DateTime     @map("hire_date")
  
  // Compensation
  salary          Decimal?     @db.Decimal(10, 2)
  salaryPeriod    SalaryPeriod? @map("salary_period")
  
  // Status
  active          Boolean      @default(true)
  terminationDate DateTime?    @map("termination_date")
  
  // Metadata
  notes           String?      @db.Text
  tags            String[]     @default([])
  
  // Timestamps
  createdAt       DateTime     @default(now()) @map("created_at")
  updatedAt       DateTime     @updatedAt @map("updated_at")
  deletedAt       DateTime?    @map("deleted_at")
  
  @@map("employees")
  @@index([fullName])
  @@index([email])
  @@index([role])
  @@index([active])
  @@index([deletedAt])
}

enum EmployeeRole {
  ADMIN
  MANAGER
  SALES
  ACCOUNTANT
  SUPPORT
  EMPLOYEE
}

enum SalaryPeriod {
  HOURLY
  DAILY
  WEEKLY
  BIWEEKLY
  MONTHLY
  YEARLY
}

// ============================================
// MARKETING CAMPAIGNS
// ============================================

model Campaign {
  id              String         @id @default(cuid())
  campaignId      String         @unique @map("campaign_id")
  
  // Campaign details
  name            String
  description     String?        @db.Text
  type            CampaignType
  channel         String?        // e.g., "Email", "Social Media", "SEO"
  
  // Budget
  budget          Decimal        @db.Decimal(12, 2)
  spent           Decimal        @default(0) @db.Decimal(12, 2)
  currency        Currency       @default(USD)
  
  // Schedule
  startDate       DateTime       @map("start_date")
  endDate         DateTime       @map("end_date")
  status          CampaignStatus @default(DRAFT)
  
  // Metrics (JSON for flexibility)
  metrics         Json?          // { impressions, clicks, conversions, revenue, roi }
  
  // Metadata
  notes           String?        @db.Text
  attachments     Json?
  tags            String[]       @default([])
  
  // Timestamps
  createdAt       DateTime       @default(now()) @map("created_at")
  updatedAt       DateTime       @updatedAt @map("updated_at")
  deletedAt       DateTime?      @map("deleted_at")
  
  @@map("campaigns")
  @@index([type])
  @@index([status])
  @@index([startDate])
  @@index([endDate])
  @@index([deletedAt])
}

enum CampaignType {
  AWARENESS
  CONSIDERATION
  CONVERSION
  RETENTION
}

enum CampaignStatus {
  DRAFT
  SCHEDULED
  ACTIVE
  PAUSED
  COMPLETED
  CANCELLED
}

// ============================================
// AUDIT LOG - CRITICAL FOR TRACKING
// ============================================

model AuditLog {
  id                String   @id @default(cuid())
  
  // What changed
  entity            String   // "Order", "Payment", "Employee", etc.
  entityId          String   @map("entity_id")
  action            AuditAction
  
  // Who made the change
  userId            String?  @map("user_id")
  userEmail         String?  @map("user_email")
  
  // Where it came from
  ipAddress         String?  @map("ip_address")
  userAgent         String?  @map("user_agent")
  
  // What changed
  changesBefore     Json?    @map("changes_before")
  changesAfter      Json?    @map("changes_after")
  fieldsModified    String[] @map("fields_modified")
  
  // Description
  description       String?  @db.Text
  metadata          Json?
  
  // Timestamp
  createdAt         DateTime @default(now()) @map("created_at")
  
  @@map("audit_logs")
  @@index([entity])
  @@index([entityId])
  @@index([action])
  @@index([userId])
  @@index([userEmail])
  @@index([createdAt])
  @@index([entity, entityId])
  @@index([entity, createdAt])
}

enum AuditAction {
  CREATE
  UPDATE
  DELETE
  RESTORE
  LOGIN
  LOGOUT
  EXPORT
  IMPORT
}

// ============================================
// CONFIGURATION - DYNAMIC SETTINGS
// ============================================

model Configuration {
  id              String   @id @default(cuid())
  
  // Config key-value
  category        String   // "general", "email", "payment", "tax"
  key             String
  value           String   @db.Text
  dataType        DataType @default(STRING) @map("data_type")
  
  // Metadata
  description     String?  @db.Text
  isPublic        Boolean  @default(false) @map("is_public") // Can be exposed to frontend
  isEditable      Boolean  @default(true) @map("is_editable")
  order           Int      @default(0)
  
  // Status
  active          Boolean  @default(true)
  
  // Timestamps
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  
  @@unique([category, key])
  @@map("configuration")
  @@index([category])
  @@index([active])
  @@index([isPublic])
}

enum DataType {
  STRING
  NUMBER
  BOOLEAN
  JSON
  DATE
}

// ============================================
// NOTIFICATIONS
// ============================================

model Notification {
  id              String             @id @default(cuid())
  
  // Notification details
  type            NotificationType
  title           String
  message         String             @db.Text
  icon            String?
  
  // Target
  userId          String?            @map("user_id")  // null = all users
  priority        Priority           @default(NORMAL)
  
  // Related entity (optional)
  entity          String?
  entityId        String?            @map("entity_id")
  url             String?            // Link to navigate
  
  // Status
  isRead          Boolean            @default(false) @map("is_read")
  readAt          DateTime?          @map("read_at")
  
  // Expiration
  expiresAt       DateTime?          @map("expires_at")
  
  // Timestamps
  createdAt       DateTime           @default(now()) @map("created_at")
  updatedAt       DateTime           @updatedAt @map("updated_at")
  
  @@map("notifications")
  @@index([userId])
  @@index([type])
  @@index([isRead])
  @@index([priority])
  @@index([createdAt])
  @@index([expiresAt])
  @@index([userId, isRead, createdAt])
}

enum NotificationType {
  INFO
  SUCCESS
  WARNING
  ERROR
  ORDER
  PAYMENT
  SYSTEM
}
